<div class= "user_session_wrapper">
  <%= link_to 'TSUNAGU', articles_path, class: "user_session_logo" %>

  <%# ログイン時のエラーメッセージ  %>
  <div class='login-flash-message'>
    <%= flash[:notice] %>
    <%= flash[:alert] %>
  </div>

  <div class= "user_session_form_box">
    <h2 class= "user_session__title">求職者用 ログイン画面</h2>
    <%= form_with model: @user, url: user_session_path, id: 'user_session', class: 'user_session', local: true do |f| %> 

      <div class="user_session_field">
        <%= f.label :メールアドレス %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="user_session_field">
        <%= f.label :password %><br />
        <%= f.password_field :password, autocomplete: "current-password" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="user_session_field">
        <%= f.check_box :remember_me %>
        <%= f.label :入力内容を保存する %>
        </div>
      <% end %>

      <div class="user_session_button">
        <%= f.submit "ログインする" , class: "user_session_blue_button" %>
      </div>
    <% end %>
  </div>
</div>