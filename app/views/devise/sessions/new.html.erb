<div class= "session_wrapper">
  <%= link_to 'TSUNAGU', articles_path, class: "logo" %>


  <div class= "form_box">
    <h2 class= "login_title">求職者用 ログイン画面</h2>
    <%= form_with model: @user, url: user_session_path, id: 'new_user', class: 'new_user', local: true do |f| %> 
      <%= render "shared/error_messages", model: f.object %>

      <div class="field">
        <%= f.label :メールアドレス %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="field">
        <%= f.label :password %><br />
        <%= f.password_field :password, autocomplete: "current-password" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :入力内容を保存する %>
        </div>
      <% end %>

      <div class="login_button">
        <%= f.submit "ログインする" , class: "login_blue_button" %>
      </div>
    <% end %>
  </div>
</div>