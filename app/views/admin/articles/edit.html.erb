<div class="article_post">
  <h1>管理者用 編集ページ</h1>
  <div class="article_forms">
    <%= form_with url: "/admin/articles/#{@article.id}", method: :patch, local: true do |f| %>
      <%= f.collection_select(:sorting_id, Sorting.all, :id, :name, {}, {class:"genre-select"}) %>
      <%= f.text_field :title, class: "title", placeholder: "題名" %><br>
      <%= f.text_area :content, class: "content", placeholder: "内容を入力してください", rows: "25", cols: "50" %><br>
      <%= f.submit "変更する", class: "post_button" %>
    <% end %>
  </div>
</div>
