<!DOCTYPE HTML>
<html>
  <head>
    <meta charset="UTF-8">
    <title>Tsunagu</title>
  </head>
  <body>
    <!-- ヘッダー -->
    <header class="header">
      <%= link_to 'TSUNAGU', articles_path,  class: "left_header" %>

      <div class= "right_header">


        <% if user_signed_in? && current_user.admin? %>
          <div class= "right2">
            <div class= "target3">管理者用</div>
            <div class= "buttons">
              <%= link_to '記事を投稿する', new_admin_article_path, class: "admin_article_button" %>
              <%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: "logout_button" %>
            </div>
          </div>

        <% elsif user_signed_in? %>
          <div class= "right1">
            <div class="target1">求職者の方はこちら</div>
            <div class= "buttons">
              <%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: "logout_button" %>
            </div>
          </div>
          <div class= "right2">
            <div class= "target2">企業の方はこちら</div>
            <div class= "buttons">
              <%= link_to 'ログアウト', destroy_company_session_path, method: :delete, class: "logout_button" %>
            </div>
          </div>

        <% else %>
          <div class= "right1">
            <div class= "target1">求職者の方はこちら</div>
            <div class= "buttons">
              <%= link_to '新規登録', new_user_registration_path, class: "register_button" %>
              <%= link_to 'ログイン', new_user_session_path, class: "login_button" %>
            </div>
          </div>
          <div class= "right2">
            <div class= "target2">企業の方はこちら</div>
            <div class= "buttons">
              <%= link_to '新規登録', new_company_registration_path, class: "register_button" %>
              <%= link_to 'ログイン', new_company_session_path, class: "login_button" %>
            </div>
          </div>
        <% end %>
      </div>
    </header>

    <!-- 詳細画面のメイン -->


    <div class="index_main">
      <div class="article_show">
        <big>
          <%= @article.title %>
        </big>
        <div class="article_content">
          <%= @article.content %>
        </div>
      </div>

      <% if user_signed_in? && current_user.admin? %>
        <div class="admin_only_button">
          <%= link_to '編集する', edit_admin_article_path(@article.id), class: "edit_button" %>
          <%= link_to '削除する', admin_article_path(@article.id), method: :delete, class: "delete_button" %>
        </div>
      <% end %>
    </div>

    <!-- フッター -->
    <footer class="footer">
      <div class= "contact">CONTACT US
        <div class= "contact_message">お問い合わせはこちらから</div>
        <div class= "tel">Tel : 0000-00-0000</div>
        <%= link_to 'TOPへ戻る', articles_path, class: "toppage_button" %>
      </div>
    </footer>
  </body>
</html>




